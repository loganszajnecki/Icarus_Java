// glsl shader that gets run for each vertex in the model (4 times in our case)
#version 400 core

in vec3 position;

out vec3 color;

void main(void) {

	gl_Position = vec4(position.x, position.y, position.z, 1.0); // where on the screen to render the incoming vertex
	color = vec3(position.x+0.5, 0.5, position.y + 0.5); 

}